<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anmol.courtcounter">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="Real Time SCORER"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:label="Table Tennis" android:name=".TableTennis.tableTennisAcitivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:label="Cricket"
            android:name=".Cricket.CricketActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:label="Badminton"
            android:name=".Badminton.BadmintonActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".splash"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:label="Volleyball" android:name=".Volleyball.VolleyballActivity" />
        <activity  android:label="Basketball" android:name=".Basketball.BasketballActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>